[batterylabel]
label=
command=echo $(acpi | cut -d " " -f3 |  sed -e "s/,//g;s/Discharging/🔋/;s/Charging/🔌/;s/Unknown/🔌/;s/Full/⚡/;")
interval=5
background=#002b36

[battery]
